{
	"$schema": "https://json.schemastore.org/commitlintrc.json",
	"extends": ["@commitlint/config-angular"],
	"rules": {
		"type-enum": [
			2,
			"always",
			["chore", "build", "ci", "docs", "feat", "fix", "perf", "refactor", "revert", "style", "test", "types"]
		],
		"scope-case": [0, "always"],
		"subject-exclamation-mark": [0, "always"]
	}
}