{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "lib": ["DOM", "ESNext"],
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["packages/shared/src/*"],
            "@ui/*": ["packages/ui/src/*"]
        }
    },
    "include": ["apps/**/*", "packages/**/*"]
}
